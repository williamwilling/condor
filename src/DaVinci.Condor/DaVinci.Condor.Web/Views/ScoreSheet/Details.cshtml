@model DaVinci.Condor.ScoreSheet

@functions
{
    private string MarkToClass(DaVinci.Condor.Mark mark)
    {
        switch (mark)
        {
            case DaVinci.Condor.Mark.Inadequate:
                return "inadequate";
                    
            case DaVinci.Condor.Mark.Adequate:
                return "adequate";
                        
            case DaVinci.Condor.Mark.Good:
                return "good";
                
            default:
                return String.Empty;
        }
    }
}

<ol>
    @foreach (var criterion in Model.Criteria)
    {
        <li class="criterion">
            <span class="description">@criterion.Description</span>
            <input type="checkbox" class="mark @MarkToClass(criterion.Mark)">
        </li>
    }
</ol>